{% extends '::base.html.twig' %}

{% block body %}
    <div style="float: left; width: 50%;"><h2>Coffee Selection</h2>
        {% for item in items %}
            <div>
                <img src='{{ item.link }}' />
                <select name="{{ item.id }}" id="quant">
                    {% for i in 1..10 %}
                    <option value="{{ i }}">{{ i }}</option>
                    {% endfor %}
                </select>
                <input type="button" name="add" value="Add to Grinder" data-id="{{ item.id }}"/>
            </div>
        {% endfor %}
    </div>
    <div style="float: left"><h2>Currently in Grinder</h2>
        <!-- <input type="button" name="refresh" value="Refresh" /> -->
        <div name="current">
            <span>Nothing yet!</span>
        </div>
        <form action="{{ path('wedo_grinder_grind') }}">
            <input type="submit" value="Grind!" />
        </form>
    </div>
{% endblock body %}

